# Production Environment Configuration
# WebClone Pro - DO NOT COMMIT REAL VALUES

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="WebClone Pro"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://webclone.pro"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/webclone_prod"
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Authentication
NEXTAUTH_URL="https://webclone.pro"
NEXTAUTH_SECRET="your-super-secure-secret-min-32-chars"
JWT_SECRET="your-jwt-secret-min-32-chars"

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_ORGANIZATION_ID="org-..."

# WebHarvest API
WEBHARVEST_API_URL="https://api.webharvest.pro"
WEBHARVEST_API_KEY="your-webharvest-api-key"

# Redis Cache (Production)
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_TLS="true"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@webclone.pro"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="WebClone Pro <noreply@webclone.pro>"

# Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="webclone-pro-production"

# Monitoring & Analytics
SENTRY_DSN="https://...@sentry.io/..."
ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Security
CORS_ORIGINS="https://webclone.pro,https://www.webclone.pro"
CSP_ENABLED="true"
SECURE_HEADERS="true"

# Feature Flags
FEATURE_AI_MODELS="true"
FEATURE_TEMPLATES="true"
FEATURE_COLLABORATION="true"
FEATURE_ANALYTICS="true"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE="/var/log/webclone/app.log"

# Performance
CACHE_TTL_DEFAULT="300"
CACHE_TTL_STATIC="3600"
CACHE_TTL_API="180"

# Limits
MAX_FILE_SIZE="52428800"  # 50MB
MAX_PROJECTS_PER_USER="100"
MAX_API_REQUESTS_PER_DAY="10000"