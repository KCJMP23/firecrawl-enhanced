# WebHarvest Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
POSTGRES_DB=webharvest
POSTGRES_USER=webharvest
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_CACHE_TTL=3600

# Security
JWT_SECRET=your_jwt_secret_key_32_chars_minimum
WEBHOOK_SECRET=your_webhook_secret_key
WEBUI_SECRET_KEY=your_openwebui_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# API Keys
OPENWEBUI_API_KEY=sk-your_openwebui_api_key

# Optional AI/LLM Configuration
OPENAI_API_KEY=sk-your_openai_key_optional
OLLAMA_URL=http://ollama:11434

# Scraping Configuration
MAX_CRAWL_PAGES=10000
DEFAULT_RATE_LIMIT_PER_DOMAIN=2
DEFAULT_DELAY_MS=500
RESPECT_ROBOTS_TXT=true
DEFAULT_TIMEOUT=30000
MAX_ACTIONS_PER_REQUEST=25
MAX_ACTION_TIME=30000

# Worker Configuration
WORKER_CONCURRENCY=4
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Open WebUI Configuration
OPENWEBUI_BASE_URL=http://openwebui:8080

# Performance Settings
MAX_CONCURRENT_CRAWLS=5
MAX_BATCH_URLS=1000
MAX_PAGE_SIZE=52428800  # 50MB in bytes

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings (change for production)
DEBUG=false
RELOAD=false